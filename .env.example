# ============================================================================
# Joy Pharma - Environment Variables Example
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# ============================================================================

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://app:!ChangeMe!@database:5432/app?serverVersion=15&charset=utf8

# ============================================================================
# JWT Configuration
# ============================================================================
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=your_jwt_passphrase_here

# ============================================================================
# MVola Payment Configuration
# ============================================================================
MVOLA_ENVIRONMENT=test
MVOLA_MERCHANT_NUMBER=your_mvola_merchant_number
MVOLA_COMPANY_NAME=Your Company Name
MVOLA_CONSUMER_KEY=your_mvola_consumer_key
MVOLA_CONSUMER_SECRET=your_mvola_consumer_secret
MVOLA_AUTH_URL=https://api.mvola.mg/token
MVOLA_MAX_RETRIES=3
MVOLA_RETRY_DELAY=1000
MVOLA_CACHE_TTL=3600

# ============================================================================
# MPGS (Mastercard Payment Gateway Services) Configuration
# ============================================================================

# Test Environment Configuration
MPGS_GATEWAY_BASE_URL=https://test-gateway.mastercard.com
MPGS_PKI_BASE_URL=https://test-gateway.mastercard.com
MPGS_MERCHANT_ID=your_test_merchant_id
MPGS_API_PASSWORD=your_test_api_password
MPGS_API_VERSION=45
MPGS_DEFAULT_CURRENCY=USD
MPGS_CERTIFICATE_PATH=
MPGS_VERIFY_PEER=false
MPGS_VERIFY_HOST=0

# Production Environment Configuration (uncomment and use for production)
# MPGS_GATEWAY_BASE_URL=https://gateway.mastercard.com
# MPGS_PKI_BASE_URL=https://gateway.mastercard.com
# MPGS_MERCHANT_ID=your_production_merchant_id
# MPGS_API_PASSWORD=your_production_api_password
# MPGS_API_VERSION=45
# MPGS_DEFAULT_CURRENCY=USD
# MPGS_CERTIFICATE_PATH=/path/to/your/certificate.pem
# MPGS_VERIFY_PEER=true
# MPGS_VERIFY_HOST=1

# ============================================================================
# API Configuration
# ============================================================================
API_URL=http://localhost:8000
# In production: https://your-api-domain.com

# ============================================================================
# Application Configuration
# ============================================================================
APP_ENV=dev
APP_SECRET=your_app_secret_key_here
# Generate a random secret key: php -r "echo bin2hex(random_bytes(32));"

# ============================================================================
# Mailer Configuration (if using email)
# ============================================================================
# MAILER_DSN=null://null
# For SMTP: MAILER_DSN=smtp://user:pass@smtp.example.com:587

# ============================================================================
# Elasticsearch Configuration (if using)
# ============================================================================
# ELASTICSEARCH_HOSTS=http://elasticsearch:9200

# ============================================================================
# CORS Configuration
# ============================================================================
# CORS_ALLOW_ORIGIN=*

# ============================================================================
# Notes
# ============================================================================
# 1. MPGS Credentials:
#    - Get your merchant ID and API password from MPGS merchant portal
#    - Test credentials are different from production credentials
#    - Never use production credentials in development
#
# 2. Certificate Authentication (Optional):
#    - If using certificate authentication, set MPGS_CERTIFICATE_PATH
#    - Leave empty if using API password authentication
#    - Certificate path should be absolute or relative to project root
#
# 3. Security:
#    - Always use HTTPS in production
#    - Keep credentials secure and never commit to version control
#    - Rotate credentials regularly
#    - Use different credentials for test and production environments
#
# 4. Testing:
#    - Use test gateway URL for development: https://test-gateway.mastercard.com
#    - Use production gateway URL for production: https://gateway.mastercard.com
#    - Set MPGS_VERIFY_PEER=false for test environment
#    - Set MPGS_VERIFY_PEER=true for production environment
