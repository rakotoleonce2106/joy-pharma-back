{% block checkbox_label %}
    {% if label is not same as(false) -%}
        {% if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif -%}
        {% if required -%}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {%- endif -%}

        {% set class = '' %}
        {% if errors|length > 0 %}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' text-destructive')|trim}) %}
            {% set class = 'border-destructive data-[state=checked]:bg-destructive data-[state=checked]:text-destructive-foreground' %}
        {% endif %}

        {% set attributes = {} %}
        {%- for attrname, attrvalue in label_attr -%}
            {%- if attrname in ['placeholder', 'title'] -%}
                {% set attributes = attributes|merge({(attrname): translation_domain is same as(false) or attrvalue is null ? attrvalue : attrvalue|trans(attr_translation_parameters, translation_domain) }) %}
            {%- elseif attrvalue is same as(true) -%}
                {% set attributes = attributes|merge({(attrname): attrname}) %}
            {%- elseif attrvalue is not same as(false) -%}
                {% set attributes = attributes|merge({(attrname): attrvalue}) %}
            {%- endif -%}
        {%- endfor -%}

        {%- set widget_attr = {} -%}
        {%- if help is not empty -%}
