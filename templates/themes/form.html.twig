{%- block checkbox_widget -%}
    <input type="checkbox"
            {{ block('widget_attributes') }}
            {% if checked %} checked="checked"{% endif %}
            value="1"
           aria-hidden="true"
           tabindex="-1"
           style="opacity: 0; position: absolute; margin: 0; pointer-events: none;"
    />
