        {%- endif -%}

        <div class="flex flex-row items-start space-x-3 space-y-0">
            <twig:ui:checkbox:root id="{{ id }}" class="{{ class }}">
                <twig:ui:checkbox:indicator/>
            </twig:ui:checkbox:root>

            {{- form_widget(form, widget_attr) -}}
            <div class="space-y-2 leading-none">
                <twig:ui:label:root {{ ...attributes }}>
                    {{ block(outerBlocks.form_label_content) }}
                </twig:ui:label:root>
                {{- form_help(form) -}}
            </div>
