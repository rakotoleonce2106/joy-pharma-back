{%- block button_widget -%}
    {%- if label is empty -%}
        {%- if label_format is not empty -%}
            {% set label = label_format|replace({
                '%name%': name,
                '%id%': id,
            }) %}
        {%- elseif label is not same as(false) -%}
            {% set label = name|humanize %}
        {%- endif -%}
    {%- endif -%}

    {% set attributes = {id, name: full_name} %}
    {% if disabled %}
        {% set attributes = attributes|merge({disabled: 'disabled'}) %}
    {% endif -%}

    {%- for attrname, attrvalue in attr -%}
        {%- if attrname in ['placeholder', 'title'] -%}
            {% set attributes = attributes|merge({(attrname): translation_domain is same as(false) or attrvalue is null ? attrvalue : attrvalue|trans(attr_translation_parameters, translation_domain) }) %}
        {%- elseif attrvalue is same as(true) -%}
            {% set attributes = attributes|merge({(attrname): attrname}) %}
        {%- elseif attrvalue is not same as(false) -%}
            {% set attributes = attributes|merge({(attrname): attrvalue}) %}
        {%- endif -%}
    {%- endfor -%}

    <twig:ui:button:root type="{{ type|default('button') }}" {{ ...attributes }}>
        {%- if translation_domain is same as(false) -%}
            {%- if label_html is same as(false) -%}
                {{- label -}}
            {%- else -%}
                {{- label|raw -}}
            {%- endif -%}
        {%- else -%}
            {%- if label_html is same as(false) -%}
                {{- label|trans(label_translation_parameters, translation_domain) -}}
            {%- else -%}
                {{- label|trans(label_translation_parameters, translation_domain)|raw -}}
            {%- endif -%}
        {%- endif -%}
    </twig:ui:button:root>
{%- endblock button_widget -%}

