{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex min-h-screen w-full flex-col bg-muted/40">
        <twig:admin:aside/>
        <div class="flex flex-col sm:gap-4 sm:py-4 sm:pl-14">
            <twig:admin:header/>
            <div class="lg:max-w-[85rem] mx-auto">
                {% block content %}{% endblock %}
            </div>
        </div>

        <twig:ui:dialog:root>
            <twig:ui:dialog:content>
                <turbo-frame
                        id="dialog"
                        data-ui--dialog-target="dynamicContent"
                        data-action="turbo:before-fetch-request->ui--dialog#showLoading"
                >
                    {{ include('admin/shared/_frame-success-streams.html.twig', { frame: 'dialog' }) }}
                </turbo-frame>
                <template data-ui--dialog-target="loadingTemplate">
                    <div class="flex h-[487px] w-full justify-center items-center p-10">
                        <div class="flex items-end text-sm text-muted-foreground">
                            <twig:ux:icon name="line-md:loading-loop" class="mr-2 h-[20px] w-[20px] animate-spin"/>
                            <span>Loading...</span>
                        </div>
                    </div>
                </template>
            </twig:ui:dialog:content>
        </twig:ui:dialog:root>

        <div id="toast-container">
            {{ include('admin/shared/toasts.html.twig') }}
        </div>
    </div>
{% endblock %}
