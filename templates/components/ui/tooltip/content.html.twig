<div {{ stimulus_target('ui--tooltip', 'wrapper') }} class="hidden z-50">
    <div {{ attributes.add(stimulus_target('ui--tooltip', 'content')).without('class') }}
            data-side="{{ outerScope.placement }}"
            data-state="open"
            class="{{ ['z-50 overflow-hidden rounded-md bg-primary px-3 py-1.5 text-xs text-primary-foreground animate-in fade-in-0 zoom-in-95 data-[state=closed]:animate-out data-[state=closed]:fade-out-0 data-[state=closed]:zoom-out-95 data-[side=bottom]:slide-in-from-top-2 data-[side=left]:slide-in-from-right-2 data-[side=right]:slide-in-from-left-2 data-[side=top]:slide-in-from-bottom-2', attributes.render('class')] |tailwind_merge }}">
        {% block content %}{% endblock %}
    </div>
</div>