{% props size = 'md' %}

{% set avatarVariants = cva({
    base: 'relative flex h-10 w-10 shrink-0 overflow-hidden rounded-full',
    variants: {
        size: {
            xs: "h-4 w-4 text-[0.5rem]",
            sm: "h-6 w-6 text-xs",
            md: "h-10 w-10 text-base",
            lg: "h-14 w-14 text-xl",
            xl: "h-20 w-20 text-3xl"
        }
    },
    defaultVariants: {
        size: "md"
    },
}) %}

<span {{ attributes.add(stimulus_controller('ui--avatar')).without('class') }} class="{{ avatarVariants.apply({size}, attributes.render('class') ?? '') | tailwind_merge }}">
    {% block content %}{% endblock %}
</span>