{% props variant = 'default', size = 'md' %}

{% set badgeVariants = cva({
    base: 'inline-flex items-center rounded-md border px-2 py-0.5 font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2',
    variants: {
        variant: {
            default: "border-primary bg-primary text-primary-foreground hover:bg-primary/80",
            secondary:"border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80",
            destructive:"text-destructive border-destructive/50 bg-destructive/10 hover:bg-destructive/20",
            outline: "text-foreground hover:bg-foreground/5",
            success: "text-success border-success/50 bg-success/10 hover:bg-success/20",
            warning: "text-warning border-warning/50 bg-warning/10 hover:bg-warning/20",
            slate: "text-slate-500 border-slate-500/50 bg-slate-500/10 hover:bg-slate-500/20",
            gray: "text-gray-500 border-gray-500/50 bg-gray-500/10 hover:bg-gray-500/20",
            zinc: "text-zinc-500 border-zinc-500/50 bg-zinc-500/10 hover:bg-zinc-500/20",
            neutral: "text-neutral-500 border-neutral-500/50 bg-neutral-500/10 hover:bg-neutral-500/20",
            stone: "text-stone-500 border-stone-500/50 bg-stone-500/10 hover:bg-stone-500/20",
            red: "text-red-500 border-red-500/50 bg-red-500/10 hover:bg-red-500/20",
            orange: "text-orange-500 border-orange-500/50 bg-orange-500/10 hover:bg-orange-500/20",
            amber: "text-amber-500 border-amber-500/50 bg-amber-500/10 hover:bg-amber-500/20",
            yellow: "text-yellow-500 border-yellow-500/50 bg-yellow-500/10 hover:bg-yellow-500/20",
            lime: "text-lime-500 border-lime-500/50 bg-lime-500/10 hover:bg-lime-500/20",
            green: "text-green-500 border-green-500/50 bg-green-500/10 hover:bg-green-500/20",
            emerald: "text-emerald-500 border-emerald-500/50 bg-emerald-500/10 hover:bg-emerald-500/20",
            teal: "text-teal-500 border-teal-500/50 bg-teal-500/10 hover:bg-teal-500/20",
            cyan: "text-cyan-500 border-cyan-500/50 bg-cyan-500/10 hover:bg-cyan-500/20",
            sky: "text-sky-500 border-sky-500/50 bg-sky-500/10 hover:bg-sky-500/20",
            blue: "text-blue-500 border-blue-500/50 bg-blue-500/10 hover:bg-blue-500/20",
            indigo: "text-indigo-500 border-indigo-500/50 bg-indigo-500/10 hover:bg-indigo-500/20",
            violet: "text-violet-500 border-violet-500/50 bg-violet-500/10 hover:bg-violet-500/20",
            purple: "text-purple-500 border-purple-500/50 bg-purple-500/10 hover:bg-purple-500/20",
            fuchsia: "text-fuchsia-500 border-fuchsia-500/50 bg-fuchsia-500/10 hover:bg-fuchsia-500/20",
            pink: "text-pink-500 border-pink-500/50 bg-pink-500/10 hover:bg-pink-500/20",
            rose: "text-rose-500 border-rose-500/50 bg-rose-500/10 hover:bg-rose-500/20",
        },
        size: {
            sm: "h-4 text-xs",
            md: "h-6 py-0.5 text-xs",
            lg: "h-8 text-sm",
            xl: "h-10 text-base",
        }
    },
    defaultVariants: {
        variant: "default",
        size: "md"
    },
}) %}

<div{{ attributes.without('class') }}
        class="{{ badgeVariants.apply({ variant, size }, attributes.render('class') ?? '') | tailwind_merge }}">
    {% block content %}{% endblock %}
</div>