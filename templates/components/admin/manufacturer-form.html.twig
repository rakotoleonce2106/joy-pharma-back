<div {{ attributes }}>
    {{ form_start(form, { attr: {
        class: 'space-y-4',
        'id': 'manufacturer-form'
    } }) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    
    <div class="space-y-2">
        {{ form_label(form.image) }}
        {% set currentImage = initialFormData and initialFormData.image ? initialFormData.image.contentUrl : null %}
        <div 
            data-controller="file-upload"
            data-file-upload-accept-value=".jpg,.jpeg,.png,.webp"
            data-file-upload-max-size-value="5"
            {% if currentImage %}data-file-upload-current-image-value="{{ currentImage }}"{% endif %}
        >
            {{ form_widget(form.image, { attr: { 
                'data-file-upload-target': 'input',
                class: 'hidden'
            } }) }}
            <input type="hidden" name="remove_image" value="0" data-file-upload-target="removeFlag">
            <div class="relative bg-white rounded-lg border p-4 {% if not currentImage %}hidden{% endif %}" data-file-upload-target="currentImageContainer">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-700">{{ 'Image'|trans }}</span>
                    <button
                        type="button"
                        data-action="click->file-upload#removeCurrentImage"
                        data-file-upload-target="removeCurrentButton"
                        class="bg-red-500 text-white rounded-full p-1.5 hover:bg-red-600 transition-colors"
                        title="{{ 'Remove current image'|trans }}"
                    >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <div 
                    class="relative"
                    data-controller="image-resize"
                    data-image-resize-min-width-value="100"
                    data-image-resize-min-height-value="100"
                    data-image-resize-max-width-value="800"
                    data-image-resize-max-height-value="800"
                >
                    <img 
                        {% if currentImage %}src="{{ currentImage }}"{% else %}src=""{% endif %}
                        alt="Current Image"
                        data-file-upload-target="currentImage"
                        data-image-resize-target="image"
                        class="w-full h-48 object-cover rounded-lg cursor-move"
                    />
                    <div
                        data-image-resize-target="resizeHandle"
                        data-action="mousedown->image-resize#startResize"
                        class="absolute bottom-2 right-2 w-5 h-5 bg-blue-500 rounded-tl-lg cursor-nwse-resize hover:bg-blue-600 transition-colors flex items-center justify-center z-20"
                        title="{{ 'Drag to resize'|trans }}"
                    >
                        <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
                        </svg>
                    </div>
                </div>
            </div>
            <div class="flex gap-4 {% if currentImage %}hidden{% endif %}" data-file-upload-target="dropzoneContainer">
                <div class="flex-1">
                    <div 
                        data-file-upload-target="dropzone"
                        class="relative border-2 border-dashed border-gray-300 rounded-lg p-6 text-center cursor-pointer hover:border-primary hover:bg-primary/5 transition-colors"
                    >
                        <div class="flex flex-col items-center justify-center space-y-2">
                            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                            </svg>
                            <div class="text-sm text-gray-600">
                                <span class="font-medium text-primary">{{ 'Drag and drop files here'|trans }}</span>
                                <span class="text-gray-500"> {{ 'or'|trans }} </span>
                                <span class="font-medium text-primary">{{ 'browse'|trans }}</span>
                            </div>
                            <p class="text-xs text-gray-500">{{ 'Allowed file types'|trans }}: .jpg, .jpeg, .png, .webp</p>
                            <p class="text-xs text-gray-500">{{ 'Maximum file size'|trans }}: 5MB</p>
                        </div>
                    </div>
                    <div class="relative hidden mt-2" data-file-upload-target="previewContainer">
                        <img 
                            data-file-upload-target="preview"
                            src=""
                            alt="Preview"
                            class="w-full h-48 object-cover rounded-lg border"
                        />
                        <button
                            type="button"
                            data-action="click->file-upload#removeFile"
                            class="absolute top-2 right-2 bg-red-500 text-white rounded-full p-2 hover:bg-red-600 transition-colors"
                            title="{{ 'Remove file'|trans }}"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                    <p class="text-xs text-gray-500 mt-1" data-file-upload-target="filename"></p>
                </div>
            </div>
            {{ form_errors(form.image) }}
        </div>
    </div>

    <div class="items-center justify-center gap-2 mt-6 hidden turbo-frame:flex">
        <twig:ui:button:root href="{{ path('admin_manufacturer') }}" variant="outline">
            {{ 'Discard'|trans }}
        </twig:ui:button:root>
        <twig:ui:button:root formnovalidate>{{ 'Update Manufacturer'|trans }}</twig:ui:button:root>
    </div>

    {{ form_end(form) }}
</div>
